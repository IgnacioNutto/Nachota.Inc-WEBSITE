<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/meta') %>
</head>
<body>
    
    <%- include('./partials/header') %>

    <main>
        <section>
            <div class="container">
                <div id="carouselExampleControlsNoTouching" class="carousel slide carrousel" data-bs-touch="false" data-bs-interval="false">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/img/Group 25jotaro-carrousel.jpg" class="d-block w-100" alt="No dudes en consultar">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/Group 26love-is-war-carrousel.jpg" class="d-block w-100" alt="Tenemos todos los Mangas">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/Group 27demon-slayer-carrousel.jpg" class="d-block w-100" alt="Hacemos envios">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </section>
        
        
        <section>
            <div class="container carrousel">
                <div class="text-destacados">
                    <h2>
                        DESTACADOS
                    </h2>
                </div>
                <div class="destacados container">
                    <div class="row">
                        <% JSONBody.forEach(destacado =>{ %>

                            <div class="pad-0 col-12 col-xs-12 col-sm-6 col-md-6 col-lg-3">
                                <div class="card">
                                    <img src="<%= destacado.img %>" alt="<%= destacado.name %>">
                                    <div class="card-info">
                                        <h2><%= destacado.name %></h2>
                                        <p>$<%= destacado.price %></p>       
                                        <a class="button" href="/contacto">COMPRAR</a>          
                                    </div>
                                </div>
                            </div> 
                        <% }) %>

                    </div>
                </div>
            </div>
        </section>
    </main>

    <%- include('./partials/footer') %>
    

</body>
</html>