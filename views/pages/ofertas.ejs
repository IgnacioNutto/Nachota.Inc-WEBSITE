<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/meta') %>
</head>
<body>
    <%- include('../partials/header') %>
    
    <main>
        <section>
            <div class="container carrousel">
                <div class="text-destacados">
                    <h2>
                        OFERTAS
                    </h2>
                </div>
                <div class="destacados container">
                    <div class="row">
                        
                        <% JSONBodyOfertas.forEach(oferta =>{ %>
                         
                        <div class="pad-0 col-12 col-xs-12 col-sm-6 col-md-6 col-lg-3">
                            <div class="card">
                                <img src="<%= oferta.img %>" alt="<%= oferta.name %>">
                                <div class="card-info">
                                    <h2><%= oferta.name %></h2>
                                    <p><%= oferta.discount %>$<%= oferta.price %></p>       
                                    <a class="button" href="/contacto">COMPRAR</a>          
                                </div>
                            </div>
                        </div> 
                        
                        <% }) %>
    
                    </div>
                </div>
            </div>
        </section>
    </main>
            
    <%- include('../partials/footer') %>
</body>
</html>